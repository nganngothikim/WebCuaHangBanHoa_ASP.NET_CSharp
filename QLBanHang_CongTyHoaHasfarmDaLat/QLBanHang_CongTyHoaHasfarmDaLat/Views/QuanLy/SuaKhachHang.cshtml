@{
    ViewBag.Title = "SuaKhachHang";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}
@using QLBanHang_CongTyHoaHasfarmDaLat.Models;
@model KhachHang
<!-- Sửa khách hàng -->
<!-- Page Content  -->
<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Sửa khách hàng</h4>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <form action="/QuanLy/SuaKhachHang" method="post">
                            <div class="form-group">
                                <label>Mã khách hàng:</label>
                                <input type="text" class="form-control" value="@Model.MaKhachHang" readonly name="makh">
                            </div>
                            <div class="form-group">
                                <label>Tên Khách Hàng:</label>
                                <input type="text" class="form-control"  value="@Model.TenKhachHang"readonly>
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ:</label>
                                <input type="text" class="form-control" value="@Model.DiaChi" readonly>
                            </div>
                            <div class="form-group">
                                <label>Số điện thoại:</label>
                                <input type="text" class="form-control" value="@Model.SoDienThoai" readonly>
                            </div>
                            <div class="form-group">
                                <label>Email:</label>
                                <input type="email" class="form-control" value="@Model.Email" readonly>
                            </div>
                            <div class="form-group">
                                <label class="d-block">Hoạt Động:</label>
                                <input type="checkbox" name="tt" @(Model.HoatDong == true ? "checked" : "") />
                            </div>
                            <button type="submit" class="btn btn-primary">Gửi</button>
                            <button type="reset" class="btn btn-danger"><a href="/QuanLy/KhachHang/" class="text-light" style="float:right;">Quay về</a></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>