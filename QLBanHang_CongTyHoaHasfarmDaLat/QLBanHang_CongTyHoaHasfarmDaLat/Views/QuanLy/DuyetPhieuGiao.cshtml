@{
    ViewBag.Title = "DuyetPhieuGiao";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}
@using QLBanHang_CongTyHoaHasfarmDaLat.Models;
@model List<GiaoHang>
@if (ViewBag.ThongBao_DuyetPhieuGiao != null)
{
    <script>
        alert("@ViewBag.ThongBao_DuyetPhieuGiao");
    </script>
}

<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Danh Sách Phiếu Giao Chưa Duyệt</h4>
                        </div>
                        <!-- <div class="iq-card-header-toolbar d-flex align-items-center">
                           <a href="admin-add-author.html" class="btn btn-primary">Thêm mới</a>
                        </div> -->
                    </div>
                    @if (Model != null)
                    {
                        <form method="post" action="/QuanLy/DuyetPhieuGiao">
                            <div class="iq-card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th style="width: 10%;">Mã vận Đơn</th>
                                                <th style="width: 20%;">Số Hóa Đơn</th>
                                                <th style="width: 25%;">Địa Chỉ</th>
                                                <th style="width: 15%;">Số Điện Thoại</th>
                                                <th style="width: 10%;">Ngày Giao</th>
                                                <th style="width: 10%;">Trạng Thái</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.MaVanDon</td>
                                                    <td>@item.SoHoaDon</td>
                                                    <td>@item.DiaChiGiaoHang</td>
                                                    <td>@item.SoDienThoai</td>
                                                    <td>@item.NgayGiao</td>
                                                    <td>
                                                        <input type="checkbox" id="chon-@item.MaVanDon" name="chon" value="@item.MaVanDon" @(item.TrangThai == true ? "checked" : "") />
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                                <div class="iq-card-header d-flex justify-content-between">
                                    <div class="iq-card-header-toolbar d-flex align-items-center">
                                        <button type="submit" class="btn btn-primary">Tạo danh sách</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <p class="text-danger text-center">Không Có Phiếu Giao Nào</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>