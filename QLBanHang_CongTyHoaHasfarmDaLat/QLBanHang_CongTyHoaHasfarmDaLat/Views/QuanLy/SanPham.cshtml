@{
    ViewBag.Title = "SanPham";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}
@using QLBanHang_CongTyHoaHasfarmDaLat.Models;
@model List<SanPham>
<!-- Sản phẩm -->
<!-- Page Content  -->
<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Danh sách sản phẩm</h4>
                        </div>
                        <div class="iq-card-header-toolbar d-flex align-items-center">
                            <a href="/QuanLy/ThemSanPham" class="btn btn-primary">Thêm sản phẩm</a>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <div class="table-responsive">
                            <table class=" table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th style="width: 7%;">Mã SP</th>
                                        <th style="width: 12%;">Hình ảnh</th>
                                        <th style="width: 12%;">Tên sản phẩm</th>
                                        <th style="width: 10%;">Chủ đề</th>
                                        <th style="width: 15%;">Mô tả</th>
                                        <th style="width: 7%;">Giá</th>
                                        <th style="width: 7%;">ĐVT</th>
                                        <th style="width: 7%;">SL Tồn</th>
                                        <th style="width: 8%;">Trạng thái</th>
                                        <th style="width: 10%;">Hoạt động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.MaSP</td>
                                            <td>
                                                @if (item.HinhAnh != null)
                                                {
                                                    <img class="img-fluid rounded" src="~/Image/@item.HinhAnh.Hinh1" alt="">
                                                }
                                                else
                                                {
                                                    <p>Chưa có hình</p>
                                                }
                                            </td>
                                            <td>@item.TenSP</td>
                                            <td>@item.ChuDe.TenChuDe</td>
                                            <td>
                                                <p class="mb-0">@item.MoTa</p>
                                            </td>
                                            <td>@item.GiaBan</td>
                                            <td>@item.DonViTinh</td>
                                            <td>@item.SoLuongTon</td>
                                            <td>
                                                <input type="checkbox" @(item.TrangThai == true ? "checked" : "") disabled />
                                            </td>
                                            <td>
                                                <div class="flex align-items-center list-user-action">
                                                    <a class="bg-dark" data-toggle="tooltip" data-placement="top" title="" data-original-title="Sửa" href="/QuanLy/SuaSanPham/@item.MaSP"><i class="ri-pencil-line"></i></a>
                                                    <a class="bg-dark" data-toggle="tooltip" data-placement="top" title="" data-original-title="Xoá" href="/QuanLy/XoaSanPham/@item.MaSP"><i class="ri-delete-bin-line"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>