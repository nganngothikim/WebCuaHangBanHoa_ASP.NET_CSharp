@{
    ViewBag.Title = "SuaSanPham";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}
@using QLBanHang_CongTyHoaHasfarmDaLat.Models;
@model SanPham
<!-- Sửa Sản Phẩm -->
<!-- Page Content  -->
<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Sửa sản phẩm</h4>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <form action="/QuanLy/SuaSanPham" method="post">
                            <div class="form-group">
                                <label>Mã sản phẩm:</label>
                                <input type="text" class="form-control" readonly name="masp" value="@Model.MaSP">
                            </div>
                            <div class="form-group">
                                <label>Tên sản phẩm:</label>
                                <input type="text" class="form-control" name="tensp" value="@Model.TenSP">
                            </div>
                            @Html.Action("Dropdown_ChuDe", "QuanLy", new { id = @Model.MaChuDe })
                            <div class="form-group">
                                <label>Mô tả:</label>
                                <textarea class="form-control" rows="4" name="mota">@Model.MoTa</textarea>
                            </div>
                            <div class="form-group">
                                <label>Đơn vị tính:</label>
                                <input type="text" class="form-control" name="dvt" value="@Model.DonViTinh">
                            </div>
                            <div class="form-group">
                                <label class="d-block">Trạng thái:</label>
                                <input type="checkbox" name="tt" @(Model.TrangThai == true ? "checked" : "") />
                            </div>
                            <button type="submit" class="btn btn-primary">Gửi</button>
                            <button type="reset" class="btn btn-danger"><a href="/QuanLy/SanPham/" class="text-light">Quay về</a></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>