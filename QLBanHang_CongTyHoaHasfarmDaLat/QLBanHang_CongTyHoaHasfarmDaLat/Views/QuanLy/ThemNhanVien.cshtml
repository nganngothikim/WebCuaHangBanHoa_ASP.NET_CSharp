@{
    ViewBag.Title = "ThemNhanVien";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}
<!-- Thêm Nhân Viên -->
<!-- Page Content  -->
@if (ViewBag.ThongBao_ThemNhanVien != null)
{
    <script>
        alert("@ViewBag.ThongBao_ThemNhanVien");
    </script>
}
<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Thêm nhân viên</h4>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <form action="/QuanLy/ThemNhanVien" method="post">
                            <div class="form-group">
                                <label>Tên nhân viên:</label>
                                <input type="text" class="form-control" name="tennv" required oninput="limitConsecutiveSpaces(this)">
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ:</label>
                                <input type="text" class="form-control" name="diachi" required oninput="limitConsecutiveSpaces(this)">
                            </div>
                            <div class="form-group">
                                <label>Ngày sinh:</label>
                                <input type="date" class="form-control" name="ngaysinh" id="ngaysinh" required>
                            </div>
                            <div class="form-group">
                                <label>Số điện thoại:</label>
                                <input type="number" class="form-control" name="sdt" required id="sdt">
                                <span id="error-msg" style="color: red; display: none;">Số điện thoại cần phải đủ 10 số</span>
                            </div>
                            <div class="form-group">
                                <label>Email:</label>
                                <input type="email" class="form-control" name="email" required oninput="removeSpaces(this)">
                            </div>
                            <div class="form-group">
                                <label>Tên Đăng Nhập:</label>
                                <input type="text" class="form-control" name="username" required oninput="removeSpaces(this)">
                            </div>
                            <div class="form-group">
                                <label>Mật Khẩu:</label>
                                <input type="text" class="form-control" name="pass" required oninput="limitConsecutiveSpaces(this)">
                            </div>
                            <div class="form-group">
                                <label class="d-block">Hoạt Động:</label>
                                <input type="checkbox" name="tt"/>
                            </div>
                            <button type="submit" class="btn btn-primary" onclick="validateAndSubmit(event)">Gửi</button>
                            <a href="/QuanLy/NhanVien/" class="btn btn-danger text-light" style="float: right;">Quay về</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
