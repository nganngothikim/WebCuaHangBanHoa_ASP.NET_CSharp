@{
    ViewBag.Title = "ChuDe";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}
@using QLBanHang_CongTyHoaHasfarmDaLat.Models;
@model List<ChuDe>
<!-- Chủ đề  -->
<!-- Page Content  -->
@if (ViewBag.ThongBao_XoaChuDe != null)
{
    <script>
        // Đoạn mã JavaScript để hiển thị thông báo alert
        alert("@ViewBag.ThongBao_XoaChuDe");
    </script>
}
<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Danh mục chủ đề</h4>
                        </div>
                        <div class="iq-card-header-toolbar d-flex align-items-center">
                            <a href="/QuanLy/ThemChuDe" class="btn btn-primary">Thêm mới</a>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th width="20%">Mã chủ đề</th>
                                        <th width="70%">Tên chủ đề</th>
                                        <th width="10%">Hoạt động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.MaChuDe</td>
                                            <td>@item.TenChuDe</td>
                                            <td>
                                                <div class="flex align-items-center list-user-action">
                                                    <a class="bg-dark" data-toggle="tooltip" data-placement="top" title="" data-original-title="Sửa" href="/QuanLy/SuaChuDe/@item.MaChuDe"><i class="ri-pencil-line"></i></a>
                                                    <button class="bg-dark" data-toggle="tooltip" data-placement="top" title="Xoá" onclick="confirmDelete('@item.MaChuDe')">
                                                        <i class="ri-delete-bin-line"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function confirmDelete(maChuDe) {
        var result = confirm("Bạn có chắc chắn muốn xóa chủ đề này không?");
        if (result) {
            // Người dùng chọn "Yes"
            window.location.href = '/QuanLy/XoaChuDe/' + maChuDe;
        } else {
            // Người dùng chọn "No" hoặc đóng cửa sổ
            // Đóng cửa sổ hiện tại
            window.close();
        }
    }
</script>
