@{
    ViewBag.Title = "HoaDon";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}
@using QLBanHang_CongTyHoaHasfarmDaLat.Models;
@model List<HoaDon>

<!-- Hoá đơn -->
<!-- Page Content  -->
<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Hoá đơn</h4>
                        </div>
                        <!-- <div class="iq-card-header-toolbar d-flex align-items-center">
                           <a href="admin-add-author.html" class="btn btn-primary">Thêm mới</a>
                        </div> -->
                    </div>
                    <div class="iq-card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th style="width: 10%;">Số HD</th>
                                        <th style="width: 20%;">Khách Hàng</th>
                                        <th style="width: 25%;">Phương thức thanh toán</th>
                                        <th style="width: 15%;">Ngày Lập</th>
                                        <th style="width: 15%;">Tổng tiền</th>
                                        <th style="width: 10%;">Hoạt động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.SoHoaDon</td>
                                            <td>@item.KhachHang.TenKhachHang</td>
                                            @if (@item.PhuongThucThanhToan == true)
                                            {
                                                <td>Thanh toán bằng tiền mặt</td>
                                            }
                                            else
                                            {
                                                <td>Thanh toán online</td>
                                            }
                                            <td>@item.NgayLap</td>
                                            <td>@string.Format("{0:N0}đ", @item.TongTien)</td>
                                            <td>
                                                <div class="flex align-items-center list-user-action">
                                                    <a class="bg-dark" data-toggle="tooltip" data-placement="top" title="" data-original-title="Xem chi tiết" href="/QuanLy/ChiTietHoaDon/@item.SoHoaDon"><i class="ri-eye-line"></i></a>
                                                    <!-- <a class="bg-dark" data-toggle="tooltip" data-placement="top" title="" data-original-title="Xoá" href="#"><i class="ri-delete-bin-line"></i></a> -->
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>