@{
    ViewBag.Title = "SuaChuDe";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}
@using QLBanHang_CongTyHoaHasfarmDaLat.Models;
@model ChuDe
@if (ViewBag.ThongBao_SuaChuDe != null)
{
    <script>
        // Đoạn mã JavaScript để hiển thị thông báo alert
        alert("@ViewBag.ThongBao_SuaChuDe");
    </script>
}
<!-- Sửa chủ đề -->
<!-- Page Content  -->
@if (Model != null)
{
    <div id="content-page" class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="iq-card">
                        <div class="iq-card-header d-flex justify-content-between">
                            <div class="iq-header-title">
                                <h4 class="card-title">Sửa danh mục chủ đề</h4>
                            </div>
                        </div>
                        <div class="iq-card-body">
                            <form action="/QuanLy/SuaChuDe" method="post">
                                <div class="form-group">
                                    <label>Mã chủ đề:</label>
                                    <input type="text" class="form-control" value="@Model.MaChuDe" name="macd" readonly>
                                </div>
                                <div class="form-group">
                                    <label>Tên chủ đề:</label>
                                    <input type="text" class="form-control" value="@Model.TenChuDe" name="tencd" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Gửi</button>
                                <button type="reset" class="btn btn-danger"><a href="/QuanLy/ChuDe" class="text-light">Quay về</a></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h4 class="text-danger;">Không có chủ đề để sửa!</h4>
}